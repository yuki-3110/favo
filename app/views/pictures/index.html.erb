<div class="container">
  
  <% @pictures.each do |picture| %>
    <div class="card mt-5">
      <div class="card-body" >
        <%= picture .user.name %>
        <br>
        <%= picture.content %>
        <br>
        <%= picture.image %>
      </div>
      <div class="card-footer text-right" >
        <%= link_to '詳細', picture_path(picture.id) %></td>
        <% if picture.user == current_user %>
          <%= link_to '編集', edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' } %>
          <%= link_to '削除', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除しますか?' } %>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
        <%= picture.updated_at.strftime("%Y-%m-%d") %>
      </div>
    </div>
  <% end %>

  <br>
  <%= link_to '新規投稿', new_picture_path %>

</div>